        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="text-left">
                            <th style="padding-left: 1.5rem;">Image</th>
                            <th style="padding-left: 2rem;">Name</th>
                            <th style="padding-left: 1.5rem;">Category</th>
                            <th style="padding-left: 1.5rem;">Price</th>
                            <th style="padding-left: 1.5rem;">Quantity</th>
                            <th style="padding-left: 1.5rem;">Size</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% result.forEach(function(products) { %>
                            <tr>
                                <td class="text-center">
                                    <div >
                                        <b>

                                            <% if (products.prodImage && products.prodImage.length > 0) { %>
                                                <% console.log(products.prodImage); %>
                                                <img src="/uploads/<%=products.prodImage[0] %>" class="img-sm img-thumbnail square-image" alt="Itvdfem">
                                            <% } else { %>
