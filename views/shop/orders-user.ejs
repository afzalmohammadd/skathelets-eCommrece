<style>
    .container {
        width: 100%;
        margin: 0 auto;
        font-family: Arial, sans-serif;
    }

    .btn-xs {
        padding: 5px 10px;
        font-size: 8px;
        margin-bottom: 5px; 
    }

    .btn-cancel-order {
    background-color: red !important;
    color: white;
  }

    .table-wrapper {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .table-title {
        background-color: #f5f5f5;
        color: #333;
        padding: 15px;
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        padding: 15px;
        text-align: left;
    }

    .table th {
        color: #333;
        font-weight: bold;
    }

    .table td {
        color: #555;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .table .btn {
        background-color: #f90;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-transform: uppercase;
        font-weight: bold;
    }

    .table .btn:hover {
        background-color: #e68000;
    }
</style>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <h5 style="font-family: 'Arial Black', sans-serif;">Your Order <b>Details</b></h5>
        </div>

        <table class="table table-striped table-hover" id="orderDetailsTable">
            <thead>
                <tr>
                    <th>Order Placed</th>
                    <th>Order ID</th>
                    <th>Delivery Address</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Payment Method</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i <userOrderDetails.length ; i++) { %>
                    <tr>
                        <td>
                            <%= userOrderDetails[i].orderDate.toLocaleDateString('en-GB') %>
                        </td>
                        <td>
                            <%= userOrderDetails[i]._id %>
                        </td>
                        <td>
                            <%= userOrderDetails[i].addressLookedup[0].address %>
                        </td>
                        <td>
                            <%= userOrderDetails[i].totalAmount.toLocaleString('en-GB') %>
                        </td>
                        <td>
                            <%= userOrderDetails[i].orderStatus %>
                        </td>
                        <td>
                            <%= userOrderDetails[i].paymentMethod %>
                        </td>
                        <td>
                            <a href="/order-details/<%= userOrderDetails[i]._id %>" class="btn btn-primary btn-xs">View Details</a>
                            
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</div>